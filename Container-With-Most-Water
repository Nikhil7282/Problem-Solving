public class Solution {
    public int maxArea(int[] height) {
        int maxArea=0;
        int a=0;
        int b=height.length-1;
        while(a<b){
            if(height[a] < height[b]){
                maxArea=Math.max(maxArea,height[a]*(b-a));
                a+=1;
            }
            else{
               maxArea=Math.max(maxArea,height[b]*(b-a));
                b-=1; 
            }
        }
        return maxArea;
    }
}
